{
  "exclude": [
    "node_modules/*",
    "db/*",
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "outDir": "dist",
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": false,
    "experimentalDecorators": true,
    "sourceMap": true,
  }
}
